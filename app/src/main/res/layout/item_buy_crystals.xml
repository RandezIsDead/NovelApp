<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_grey">

    <RelativeLayout
        android:id="@+id/top_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/grey_circle"
            android:src="@drawable/back"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="1dp"
            android:contentDescription="@string/todo"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cry_fuck"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:textColor="@color/cool"
            android:gravity="center"
            android:fontFamily="@font/lato"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_rel"
        android:layout_marginTop="18dp">

        <RelativeLayout
            android:id="@+id/bsq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btn_exchange">

            <ImageView
                android:id="@+id/ico_boost"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/crystals"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/boost_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0crystals"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:fontFamily="@font/lato"
                android:layout_toEndOf="@id/ico_boost"
                android:layout_marginStart="6dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_blue">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exch"
                android:textSize="12sp"
                android:layout_margin="8dp"
                android:textColor="@color/light_grey"
                android:fontFamily="@font/lato"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bst"
        android:layout_marginTop="28dp"
        android:text="@string/buy_crystalls_text"
        android:textSize="14sp"
        android:textColor="@color/cool"
        android:gravity="center"
        android:fontFamily="@font/lato"/>

    <RelativeLayout
        android:id="@+id/buy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_main"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_light_grey">

        <ImageView
            android:id="@+id/bi1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/crystals"
            android:contentDescription="@string/todo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="18dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/bi1"
            android:layout_marginStart="26dp"
            android:layout_toStartOf="@id/cost1"
            android:layout_marginEnd="26dp"
            android:text="@string/_1cry"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

        <ImageView
            android:id="@+id/ar1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"
            android:contentDescription="@string/todo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cost1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ar1"
            android:layout_marginEnd="10dp"
            android:text="@string/_100rub"
            android:textColor="#805D6A73"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy1"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_light_grey">

        <ImageView
            android:id="@+id/bi2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/crystals"
            android:contentDescription="@string/todo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="18dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/bi2"
            android:layout_marginStart="26dp"
            android:layout_toStartOf="@id/cost2"
            android:layout_marginEnd="26dp"
            android:text="@string/_3cry"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

        <ImageView
            android:id="@+id/ar2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"
            android:contentDescription="@string/todo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cost2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ar2"
            android:layout_marginEnd="10dp"
            android:text="@string/_300rub"
            android:textColor="#805D6A73"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy2"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_light_grey">

        <ImageView
            android:id="@+id/bi3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/crystals"
            android:contentDescription="@string/todo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="18dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/bi3"
            android:layout_marginStart="26dp"
            android:layout_toStartOf="@id/cost3"
            android:layout_marginEnd="26dp"
            android:text="@string/_5cry"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

        <ImageView
            android:id="@+id/ar3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"
            android:contentDescription="@string/todo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cost3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ar3"
            android:layout_marginEnd="10dp"
            android:text="@string/_500rub"
            android:textColor="#805D6A73"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy3"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_light_grey">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/crystals"
            android:contentDescription="@string/todo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="18dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/card_img"
            android:layout_marginStart="26dp"
            android:layout_toStartOf="@id/cost4"
            android:layout_marginEnd="26dp"
            android:text="@string/_10cry"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

        <ImageView
            android:id="@+id/froward"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"
            android:contentDescription="@string/todo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cost4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/froward"
            android:layout_marginEnd="10dp"
            android:text="@string/_1100rub"
            android:textColor="#805D6A73"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy4"
        android:layout_marginTop="24dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:background="@color/other_grey"
            android:layout_toStartOf="@id/text_or"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:layout_centerHorizontal="true"
            android:textColor="#805D6A73"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:background="@color/other_grey"
            android:layout_toEndOf="@id/text_or"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rel_or"
        android:layout_marginTop="18dp"
        android:text="@string/sos"
        android:textSize="14sp"
        android:textColor="@color/cool"
        android:gravity="center"
        android:fontFamily="@font/lato"/>

    <RelativeLayout
        android:id="@+id/rel_exc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_two"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/switch_exc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/switch_ico"
            android:layout_centerInParent="true"
            android:contentDescription="@string/todo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/switch_exc"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/plus"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/plus_cool"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/todo"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/plus"
                android:layout_toStartOf="@id/minus"
                android:background="@drawable/btn_light_grey"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    tools:ignore="UselessParent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/exc_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/_1"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:fitsSystemWindows="true"
                        android:background="@null"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:fontFamily="@font/lato"/>

                    <ImageView
                        android:id="@+id/crys"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/crystals"
                        android:layout_toEndOf="@id/exc_counter"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/todo"/>
                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/minus"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/minus_cool"
                android:layout_marginStart="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/todo"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/switch_exc"
            android:layout_marginStart="16dp"
            android:background="@drawable/btn_light_grey"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rub_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1100rub"
                android:textColor="@color/grey"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:fontFamily="@font/lato"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_cont"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rel_exc"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_grad">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/cont"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>